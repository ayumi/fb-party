{
  "manifest_version": 2,
  "name": "troll.io",
  "version": "0.2.0",
  "browser_action": {},
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["trollio.css"],
      "js": ["trollio-compiled.js"]
    }
  ],
  "background": {
    "scripts": ["event-page.js"],
    "persistent": false
  },
  "permissions": [
    "http://*.troll.io/",
    "https://*.troll.io/"
  ],
  "description": "comment and share images anonymously on any webpage.",
  "web_accessible_resources": [
    "frame/*"
  ]
}
