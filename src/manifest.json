{
  "manifest_version": 2,
  "name": "troll.io",
  "version": "0.2.3",
  "browser_action": {
    "default_icon": {
      "19": "images/trollio-egg-19.png",
      "38": "images/trollio-egg-38.png"
    }
  },
  "icons": {
    "48": "images/trollio-egg-48.png",
    "128": "images/trollio-egg-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["trollio.css"],
      "js": ["trollio-compiled.js"]
    }
  ],
  "background": {
    "scripts": ["event-page.js"],
    "persistent": false
  },
  "permissions": [
    "http://*.troll.io/",
    "https://*.troll.io/"
  ],
  "description": "comment and share images anonymously on any webpage.",
  "web_accessible_resources": [
    "frame/*"
  ]
}
